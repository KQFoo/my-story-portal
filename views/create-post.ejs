<form class="post-form" action="/post/create" method="POST">
    <div class="mb-4">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required class="w-full p-2 border rounded">
    </div>

    <div class="mb-4">
        <label for="post_content">Your Story</label>
        <textarea id="post_content" name="post_content" required class="w-full p-2 border rounded h-32"></textarea>
    </div>

    <div class="mb-4">
        <label for="music_url">Music URL</label>
        <input type="url" id="music_url" name="music_url" required
            placeholder="Paste Spotify, YouTube, or SoundCloud URL" class="w-full p-2 border rounded">
        <p class="text-sm text-gray-600 mt-1">
            Supported platforms: YouTube
        </p>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">
        Share Your Story
    </button>
</form>